<div class="form__container">
  <%= form_with url: post_comments_path(post.id), scope: :data do |f| %>
    <div class="field">
      <%= f.text_area :text, size: "60x10", required: true, placeholder: "Write comment...", class: "text_area" %>
    </div>
    <div class="actions">
      <%= f.submit "Comment", class: "btn" %>
    </div>
  <% end %>
</div>